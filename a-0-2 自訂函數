A-3	//■■■■■■■■■   ☪𒀹𒀹  //時間 字串
//時間 字串
formatTime(t) =>
    y = str.tostring(year(t))
    m = str.tostring(month(t), "00")
    d = str.tostring(dayofmonth(t), "00")
    h = str.tostring(hour(t), "00")
    min = str.tostring(minute(t), "00")	
    y + "-" + m + "-" + d + " " + h + ":" + min

B-1	//■■■■■■■■■   ☪𒀹𒀹  時間輸入方式
var DT = timestamp("UTC+8", 2025,7,18,8,30)

B-4	//■■■■■■■■■   ☪𒀹𒀹  時間輸出方式 
hr = hour(time)
min = minute(time)
