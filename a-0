A-1	//■■■■■■■■■  ▲✔✘
upper = high >= ta.highest(high,20)
lower = low <= ta.lowest(low,20)

A-3	//■■■■■■■■■  ▲✔✘   "\n" 要放在雙引號中
	//■■■■■■■■■  ▲✔✘   段行是否正確，是看跟第一行的縮排差距，不是上一行

A-1	//■■■■■■■■■  ▲✔✘  斷行 空兩格 最後一個括號也屬於斷行，所以是空兩格
plotshape(
  series = (upper and (high-high[1])>=(high[1]-high[2])*3) or (lower and (low-low[1])<=(low[1]-low[2])*3 ),
  size = size.large,
  color = co,
  style = shape.circle,
  show_last = 200
  )



//■■■■■■■■■  ⛫⛫⛩︎  
====================================================================================
A-3	//■■■■■■■■■  ⛫⛫⛩︎  max_labels_count  建立labels (預設50 最大500)
indicator("學習用76", overlay=true ,max_polylines_count = 50, max_labels_count = 500)//

A-1	//■■■■■■■■■  ⛫⛫⛩︎  空值表示方式 
co = color(na)


A-1	//■■■■■■■■■  ⛫⛫⛩︎  if 結構 
if upper 
    co := color.green
    if (high-high[1])>=(high[1]-high[2])*3
        si1 := size.huge
        co := color.olive
else if lower
    co := color.red
    if (low-low[1])<=(low[1]-low[2])*3 
        si1 := size.huge



//■■■■■■■■■  FF (( ■,●,○,□,▼  ))---※Θ★  
====================================================================================
A-1	//■■■■■■■■■  FF (( ■,●,○,□,▼  ))---※Θ★  plotshape
plotshape(
  series = upper or lower,
  size = size.small,
  color = co,
  style = shape.circle,
  show_last = 200
  )



//■■■■■■■■■   ☪𒀹𒀹
